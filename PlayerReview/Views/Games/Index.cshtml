@{
    Layout = "_myLayout";


    var games = (List<Game>)ViewData["games"];
    var companies = (List<Company>)ViewData["companies"];
}



<h3 class="display-4 my-2">All Games</h3>

<hr />

<div class="row">

    @foreach (var game in games)
    {

        <div class="col-md-3 mb-5">

            <div class="card bg-light text-dark">

                <img src=@game.Image
                     class="card-img-top p-1"
                     alt="game image"
                     width="200px"
                     height="250px" />

                <div class="card-body">
                    <h5 class="card-title">@game.GameName</h5>
                    <b>
                        Company:
                        @foreach (var comp in companies)
                        {
                            @if (comp.Id == game.CompanyId)
                            { 
                                <a href="/companies/details/@comp.Id"> @comp.CompanyName</a>
                            }
                        }


                    </b>
                    <div class="text-center mt-2">
                        <a href="/games/details/@game.Id" class="btn btn-success">
                            Reviews
                        </a>
                    </div>
                </div>

            </div>

        </div>
    }
    </div>
