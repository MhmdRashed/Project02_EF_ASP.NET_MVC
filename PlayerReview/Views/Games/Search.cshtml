
@{
    Layout = "_myLayout";

    var searchRes = (List<Game>)ViewData["searchRes"];
    var target = (string)ViewData["target"];
}
<br />

<h1>SEARCH RESULTS FOR: @target </h1>

<hr />

<div class="row">

    @foreach (var game in searchRes)
    {

        <div class="col-md-3 mb-5">

            <div class="card bg-light text-dark">

                <img src=@game.Image
                     class="card-img-top p-1"
                     alt="game image"
                     width="200px"
                     height="250px" />

                <div class="card-body">
                    <h5 class="card-title">@game.GameName</h5>
                    <div class="text-center">
                        <a href="/games/details/@game.Id" class="btn btn-primary ">
                            More INFO
                        </a>
                    </div>
                </div>

            </div>

        </div>
    }
</div>
