<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />



    @*fonts*@
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Odibee+Sans&display=swap" rel="stylesheet">

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


</head>
<body>
    <div>

        <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #371d61; font-family: 'Odibee Sans', cursive; font-size:22px">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">PlayerReview</a>
                <div class="collapse navbar-collapse ml-5" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link mr-2" aria-current="page" href="/"><i class="fas fa-home mr-1"></i>HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mr-2" aria-current="page" href="/games"><i class="fas fa-gamepad mr-1"></i> GAMES </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mr-2" href="/home/about"> <i class="fas fa-address-card mr-1"></i>ABOUT</a>
                        </li>
                    </ul>
                </div>
                <form class="d-flex" asp-controller="students" asp-action="search">
                    <input class="form-control me-2" typeof="seach" name="txt" placeholder="e.g. Need For Speed" />
                    <button class="btn btn-info ml-2" typeof="submit">Search</button>
                </form>
            </div>
        </nav>


        <div class="container">

            @RenderBody()

        </div>



        <footer class="footer mt-auto text-light py-3" style="background-color: #141a41">

            <div class="container">
                <div class="row">

                    <div class="col-md-10">

                        <span>&copy; 2021 PLAYREVIEW | Follow us on our social Media! </span>

                    </div>

                    <div class="col-2">
                        <a class="soc-med" href="#">
                            <i class="fab fa-twitter fa-2x pl-3"></i>
                            <i class="fab fa-youtube fa-2x pl-3"></i>
                            <i class="fab fa-instagram fa-2x pl-3"></i>
                        </a>

                    </div>



                </div>


            </div>
        </footer>








        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script>

            $(document).ready(function () {
                $(".nav-link").hover(function () {
                    $(this).css("background-color", "#10081d");
                }, function () {
                    $(this).css("background-color", "transparent");
                });
            });

        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>






    </div>
</body>
</html>
